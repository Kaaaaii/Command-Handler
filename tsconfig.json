{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": "build/",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }